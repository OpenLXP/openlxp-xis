# nginx.default


include /etc/nginx/mime.types;

server {
    listen 8020;
    server_name example.org;

    location /static {
        root /tmp/openlxp-xis/app;
    }

    location / {
        proxy_pass http://app_xis:8010;
        proxy_set_header Host $http_host;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    }
}
